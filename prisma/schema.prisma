datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id    String @id @default(cuid())
  firstName String
  lastName String
  email String @unique

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  verification Verification? @relation(fields: [id], references: [userId])
  password String? 
}

model Verification {
  id String @id @default(cuid())
  user User?
  userId String @unique
  token String
  verified Boolean @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}