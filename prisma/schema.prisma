datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Account {
  id String @id @default(cuid())
  email String @unique
  firstName String
  lastName String
  password String?
  provider AccountProvider
  idOnProvider String?

  student Student?

  teacher Teacher?
  verification Verification?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum AccountProvider {
  Mail
  Google
  Facebook
}

model Student {
  id    String @id @default(cuid())
  account Account @relation(fields: [accountId], references: [id])
  accountId String @unique
  firstName String
  lastName String
  avatarUrl String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Teacher {
  id String @id @default(cuid())
  account Account @relation(fields: [accountId], references: [id])
  accountId String @unique
  firstName String
  lastName String
  avatarUrl String?
  title TeacherTitle

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum TeacherTitle {
  Mrs
  Mr
  Prof
}

model Verification {
  id String @id @default(cuid())
  account Account @relation(fields: [accountId], references: [id])
  accountId String @unique
  token String
  verified Boolean @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}